# CareerConnect AI Environment Variables Template
# Copy this file to .env and update the values

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development
FLASK_PORT=5000

# Gemini AI API Configuration
GEMINI_API_KEY=your_api_key_here
GEMINI_MODEL=gemini-pro
# JWT Security
JWT_SECRET=your_jwt_secret_here

# Firebase Configuration
FIREBASE_PROJECT_ID=ruvaa-cbcaa
FIREBASE_DATABASE_URL=https://ruvaa-cbcaa-default-rtdb.asia-southeast1.firebasedatabase.app/
FIREBASE_CREDENTIALS_PATH=credentials/serviceAccountKey.json

# Google Gemini AI Duplicate (avoid duplicate in real .env)
# GEMINI_API_KEY=override_if_needed

# Backend Integration
BACKEND_API_URL=http://localhost:8000/api
BACKEND_INTEGRATION_ENABLED=True

# Frontend Origins (ensure matches React dev server)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Feature Flags
ENABLE_GEMINI=True
ENABLE_MENTOR_MATCHING=True
ENABLE_LEARNING_PATHS=True

# Logging Enhancements
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Cache Settings
CACHE_TTL=3600

# Rate Limit Override (dev relaxed)
RATELIMIT_DEFAULT=1000 per hour

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Rate Limiting Configuration
RATELIMIT_STORAGE_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/careerconnect.log

# Database Configuration (for future use)
DATABASE_URL=sqlite:///careerconnect.db

# External APIs (optional)
OPENAI_API_KEY=your_openai_api_key_here
LINKEDIN_API_KEY=your_linkedin_api_key_here

# Email Configuration (for future use)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# CareerConnect Specific Settings
MAX_PROFILE_SIZE=10000
MAX_ASSESSMENT_QUESTIONS=100
CACHE_TTL=3600